<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="20dp">
    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="정수입력1"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="정수입력2"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                />
            <Button
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                />
            <Button
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                />
            <Button
                android:layout_weight="1"
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                />
            <Button
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                />
            <Button
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                />
            <Button
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                />
            <Button
                android:layout_weight="1"
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:id="@+id/btnplus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="더하기"
                android:layout_span="5"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="빼기"
                android:layout_span="5"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="곱하기"
                android:layout_span="5"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:id="@+id/divide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나누기"
                android:layout_span="5"
                />
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:id="@+id/TextResult"
        android:layout_margin="5dp"
        android:text="계산 결과 : "
        android:textColor="#ff0000"
        android:textSize="20sp"
        />
</LinearLayout>